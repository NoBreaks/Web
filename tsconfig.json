{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "typings/main.d.ts",
    "typings/main"
  ],
  "filesGlob": [
    "typings/**/*.ts",
    "app/**/*.ts",
    "typings/browser.d.ts"
  ],
  "files": [
    "typings/browser.d.ts",
    "typings/browser/ambient/angular-protractor/index.d.ts",
    "typings/browser/ambient/es6-shim/index.d.ts",
    "typings/browser/ambient/hammerjs/index.d.ts",
    "typings/browser/ambient/jasmine/index.d.ts",
    "typings/browser/ambient/node/index.d.ts",
    "typings/browser/ambient/selenium-webdriver/index.d.ts",
    "typings/browser/ambient/webpack/index.d.ts",
    "typings/browser/ambient/zone.js/index.d.ts",
    "typings/browser/definitions/es6-promise/index.d.ts",
    "typings/browser/definitions/zone.js/index.d.ts",
    "app/app.component.ts",
    "app/boot.ts",
    "app/vendor.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "resolveGlobs": true,
    "forkChecker": true,
    "cacheDirectory": "node_modules/.awesome-typescript-loader-cache"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
