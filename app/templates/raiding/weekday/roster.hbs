<div class="roster-tab">
  <ul class="row">
    {{#each model as |character|}}
    <li class="col s12 m6 l4">
      <div class="card grey darken-4">
        <div class="card-content row {{index-to-class character.characterId.class true}}">
          <div class="content-wrap">
            <h6 class="name col s12 white-text">{{character.characterId.name}}</h6>
            <img src="http://render-us.worldofwarcraft.com/character/{{character.characterId.thumbnail}}" class="col s6 m4"/>
            <div class="info col s6 m8 white-text">
              <p>{{character.characterId.items.averageItemLevelEquipped}} {{character.characterId.spec.name}}</p>
              <p>{{epgp-total character.effortPoints character.gearPoints}}<span class="substrict">EP/GP</span></p>
            </div>
          </div>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>
